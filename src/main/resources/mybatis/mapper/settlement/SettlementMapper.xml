<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="my.domain.settlement.SettlementMapper">

    <resultMap id="settlementResultMap" type="my.domain.settlement.vo.SettlementVO">
        <id property="id" column="ID"/>
        <result property="bookOwnerId" column="BOOK_OWNER_ID"/>
        <result property="settledAt" column="SETTLED_AT"/>
    </resultMap>

    <select id="selectAllByBookOwnerId" parameterType="long" resultMap="settlementResultMap">
        SELECT *
        FROM BOOK_OWNER_SETTLEMENT
        WHERE BOOK_OWNER_ID = #{id}
    </select>

    <select id="selectSettledByBookOwnerId" parameterType="long" resultMap="settlementResultMap">
        SELECT *
        FROM BOOK_OWNER_SETTLEMENT
        WHERE BOOK_OWNER_ID = #{id} AND SETTLED_AT IS NOT NULL
    </select>

    <select id="selectUnSettledByBookOwnerId" parameterType="long" resultMap="settlementResultMap">
        SELECT *
        FROM BOOK_OWNER_SETTLEMENT
        WHERE BOOK_OWNER_ID = #{id} AND SETTLED_AT IS NULL
    </select>

</mapper>
